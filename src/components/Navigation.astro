---
import { SITE_TITLE } from '../consts';
import Logo from './ui/Logo.astro';
import Button from './ui/Button.astro';
---

<nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
	<div class="flex items-center group lg:flex-1">
		<Logo />
		<h1 class="text-2xl transition-colors duration-300 text-ramen-brown group-hover:text-ramen-red">
			<a href="/" class="-m-1.5 p-1.5 uppercase font-bold">{SITE_TITLE}</a>
		</h1>
	</div>

	<div class="flex items-center lg:hidden">
		<button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
			<span class="sr-only">Open main menu</span>
			<svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
				<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
			</svg>
		</button>
	</div>

	<ul class="hidden lg:flex lg:flex-1 lg:items-center lg:mx-12 lg:gap-x-6 xl:gap-x-12 xl:mx-0 !list-none p-0 m-0">
		<li><a href="#products" class="text-md text-ramen-brown hover:text-ramen-red">Product</a></li>
		<li><a href="#features" class="text-md text-ramen-brown hover:text-ramen-red">Features</a></li>
		<li><a href="#marketplace" class="text-md text-ramen-brown hover:text-ramen-red">Marketplace</a></li>
		<li><a href="#company" class="text-md text-ramen-brown hover:text-ramen-red">Company</a></li>
	</ul>

	<div class="hidden lg:flex lg:items-center lg:justify-end flex-1">
		<Button type="solid-thin" href="#login" arrow={false}>Log in
		</Button>
	</div>
</nav>

<!-- Mobile menu, show/hide based on menu open state. -->
<div class="lg:hidden hidden" role="dialog" aria-modal="true">
	<!-- Background backdrop, show/hide based on slide-over state. -->
	<div class="fixed inset-0 z-50"></div>
    <div class="fixed inset-y-0 right-0 w-full overflow-y-auto bg-white/95 px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10 z-150 lg:z-auto">
        <div class="flex items-center justify-between">
            <Logo />
            <h1 class="text-2xl transition-colors duration-300 text-ramen-brown group-hover:text-ramen-red">
                <a href="/" class="-m-1.5 p-1.5 uppercase font-bold">{SITE_TITLE}</a>
            </h1>
            <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
                <span class="sr-only">Close menu</span>
                <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <div class="mt-6 flow-root">
            <div class="-my-6 divide-y divide-gray-500/10">
                <ul class="space-y-2 py-6 !list-none p-0 m-0">
                    <li><a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-ramen-brown hover:bg-gray-50">Product</a></li>
                    <li><a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-ramen-brown hover:bg-gray-50">Features</a></li>
                    <li><a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-ramen-brown hover:bg-gray-50">Marketplace</a></li>
                    <li><a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-ramen-brown hover:bg-gray-50">Company</a></li>
                </ul>
                <div class="py-6">
                     <Button type="solid-thin" href="#login" arrow={false}>Log in</Button>
                </div>
            </div>
        </div>
	</div>
</div>